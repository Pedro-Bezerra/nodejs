<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" text="text/css" href="../../css/style-leitura.css">
    <link rel="icon" type="image/x-icon" href="../../images/PTV.png">
    <script text="text/javascript" src="../../scripts/pressionarLink.js"></script>
    <title>Leitura</title>
</head>
<body>
    <nav class="nav-menu">
        <section class="nav-menu_home">
            <a href="/paratodosverem/principal"><img class="nav-menu_img-home" src="../../images/house-fill.svg" alt="home"></a>
            <img class="nav-menu_logo" src="../../images/PTV.png" alt="PTV">
        </section>
        <section class="nav-menu_botoes-logout">
            <section class="nav-menu_secao-botoes">
                <button onclick="pressionarLink('#container-principal')" class="nav-menu_botao link"><img class="nav-menu_botao-img" src="../../images/link-45deg.svg" alt="link"></button>
                <a onclick="editar()" href="/paratodosverem/formulario/editar/" class="nav-menu_botao edicao"><img class="nav-menu_botao-img" src="../../images/pencil-fill.svg" alt="editar"></a>
                <button id="audio" onclick="ouvir()" class="nav-menu_botao audio"><img id="img-audio" class="nav-menu_botao-img" src="../../images/volume-up-fill.svg" alt="volume"></button>
            </section>
            <form class="nav-menu_form" action="/paratodosverem/logout?_method=DELETE" method="POST">
                <button class="nav-menu_botao-logout" type="submit"></button>
            </form>
        </section>
    </nav>
    <main class="secao-principal">
        <div id="container-principal" class="secao-principal_container">
            <section>
                <label class="secao-principal_container-label" for="categoria">Categoria: </label>
                <input disabled class="secao-principal_container-input" type="text" name="categoria" value="<%= subject %>">
            </section>
            
            <section>
                <label class="secao-principal_container-label" for="nome">Nome: </label>
                <input disabled class="secao-principal_container-input" type="text" name="nome" value="<%= name %>">
            </section>
            
            <section>
                <label class="secao-principal_container-label" for="responsavel">Responsável: </label>
                <input disabled class="secao-principal_container-input" type="text" name="responsavel" value="<%= entity %>">
            </section>
            
            <section>
                <label class="secao-principal_container-label" for="descricao">Descrição: </label>
                <input id="descricao" disabled class="secao-principal_container-input" type="text" name="descricao" value="<%= description %>">
            </section>
            
            <input type="hidden" id="qrcode-data" value="<%= qrcodeImage %>">
            <input type="hidden" class="secao-principal_container-input" value="<%= temaCode %>">
        </div>
    </main>
</body>
</html>